<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorOnSurface"
    app:cardCornerRadius="@dimen/size_8dp"
    android:layout_marginHorizontal="@dimen/size_4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16dp">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@drawable/background_image_item_history"
            android:padding="@dimen/size_16dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_wifi" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imgEndIcon"
            android:layout_toEndOf="@id/imgIcon"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="Wifi" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_toStartOf="@+id/imgEndIcon"
            android:layout_toEndOf="@id/imgIcon"
            android:maxLines="1"
            tools:text="SSID: 0000.00" />

        <TextView
            android:id="@+id/tvCreateAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_toStartOf="@+id/imgEndIcon"
            android:layout_toEndOf="@id/imgIcon"
            android:maxLines="1"
            tools:text="15:00 22/12/2023" />

        <ImageView
            android:id="@+id/imgEndIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_16dp"
            android:padding="@dimen/size_4dp"
            android:src="@drawable/ic_forward_24"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_forward_24" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>