<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_generate_item"
    android:paddingHorizontal="@dimen/size_8dp"
    android:paddingVertical="@dimen/size_16dp">

    <ImageView
        android:id="@+id/startIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/size_8dp"
        android:src="@drawable/ic_web_24"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_web_24" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tvSelected"
        android:layout_toEndOf="@id/startIcon"
        android:textSize="@dimen/font_size_18_medium"
        tools:text="Title" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_alignStart="@id/tvTitle"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_toStartOf="@id/tvSelected"
        android:textSize="@dimen/font_size_16_small"
        android:visibility="gone"
        tools:text="Description" />

    <TextView
        android:id="@+id/tvSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_toStartOf="@id/endIcon"
        android:textSize="@dimen/font_size_16_small"
        tools:ignore="RelativeOverlap"
        tools:text="Selected" />

    <ImageView
        android:id="@+id/endIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/size_8dp"
        android:src="@drawable/ic_arrow_down_24"
        tools:ignore="ContentDescription" />
</RelativeLayout>