<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/tvNameApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_48dp"
        android:text="@string/app_name"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/font_size_24_large"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/itemScan"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:background="@drawable/background_item_feature_4"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvNameApp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgScan"
            android:layout_width="@dimen/size_65dp"
            android:layout_height="@dimen/size_65dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_qr_code_scanner_24"
            android:tint="@color/white" />

        <TextView
            style="@style/styleItemFeature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_toEndOf="@id/imgScan"
            android:text="@string/scan_code"
            android:textSize="@dimen/font_size_24_large" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/itemCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:background="@drawable/background_item_feature_3"
        android:padding="@dimen/size_16dp"
        app:layout_constraintTop_toBottomOf="@id/itemScan">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCreate"
            android:layout_width="@dimen/size_65dp"
            android:layout_height="@dimen/size_65dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_image_item_feature"
            android:padding="@dimen/size_8dp"
            android:src="@drawable/ic_add_qr_code_24"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tvCreate"
            style="@style/styleItemFeature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_toEndOf="@id/imgCreate"
            android:text="@string/create"
            tools:ignore="RelativeOverlap" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_forward_24"
            android:tint="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/itemHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:background="@drawable/background_item_feature_1"
        android:padding="@dimen/size_16dp"
        app:layout_constraintTop_toBottomOf="@id/itemCreate">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgHistory"
            android:layout_width="@dimen/size_65dp"
            android:layout_height="@dimen/size_65dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_image_item_feature"
            android:padding="@dimen/size_8dp"
            android:src="@drawable/ic_history_24"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tvHistory"
            style="@style/styleItemFeature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_toEndOf="@id/imgHistory"
            android:text="@string/history"
            tools:ignore="RelativeOverlap" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_forward_24"
            android:tint="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/itemSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:background="@drawable/background_item_feature_2"
        android:padding="@dimen/size_16dp"
        app:layout_constraintTop_toBottomOf="@id/itemHistory">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSettings"
            android:layout_width="@dimen/size_65dp"
            android:layout_height="@dimen/size_65dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_image_item_feature"
            android:padding="@dimen/size_8dp"
            android:src="@drawable/ic_settings_24"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/tvSettings"
            style="@style/styleItemFeature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_toEndOf="@id/imgSettings"
            android:text="@string/settings"
            tools:ignore="RelativeOverlap" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_forward_24"
            android:tint="@color/white" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
