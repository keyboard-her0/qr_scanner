<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/itemChangeLanguage"
        layout="@layout/layout_drop_down_settings_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp" />

    <include
        android:id="@+id/itemChangeTheme"
        layout="@layout/layout_drop_down_settings_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp" />

    <include
        android:id="@+id/itemVibrate"
        layout="@layout/layout_switch_settings_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp" />

    <include
        android:id="@+id/itemPrivacyPolicy"
        layout="@layout/layout_settings_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:text="@string/app_version"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/font_size_16_small" />

</LinearLayout>