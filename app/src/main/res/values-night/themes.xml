<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">?attr/statusBarColor</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">?attr/navigationBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_1F2D3A</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="headerAppBarContentColor">@color/white</item>
        <item name="headerAppBarBackground">?attr/colorSecondary</item>
        <item name="statusBarColor">?attr/colorSecondary</item>
        <item name="navigationBarColor">?attr/colorSecondary</item>

        <item name="colorOnBackground">@color/color_0A1826</item>
        <item name="dividerColor">#DD636262</item>
        <item name="iconColor">#9da4a9</item>
        <item name="textColor">#9da4a9</item>

    </style>

</resources>