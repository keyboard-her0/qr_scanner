        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="headerAppBarContentColor">@color/color_c6c6c6</item>
        <item name="headerAppBarBackground">#12181f</item>

        <item name="colorOnBackground">#0b0e13</item>
        <item name="colorOnSurface">#12181f</item>
        <item name="dividerColor">#353c45</item>
        <item name="iconColor">@color/white</item>
