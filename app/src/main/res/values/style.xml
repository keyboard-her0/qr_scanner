<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="DialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustResize</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!--    Main-->
    <style name="styleItemFeature">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/font_size_22_large</item>
    </style>


    <!--    Settings-->
    <style name="styleItemSetting">
        <item name="android:paddingTop">@dimen/size_8dp</item>
        <item name="android:paddingBottom">@dimen/size_8dp</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingEnd">@dimen/size_16dp</item>
        <item name="android:background">@drawable/background_generate_item</item>
    </style>

    <style name="styleItemSettingTitle">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:layout_marginStart">@dimen/size_6dp</item>
        <item name="android:textSize">@dimen/font_size_18_medium</item>
    </style>

    <style name="styleItemSettingDescription">
        <item name="android:textSize">@dimen/font_size_16_small</item>
    </style>


    <!--    Input-->
    <style name="styleTextHeaderInput">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/font_size_16_small</item>
    </style>

    <style name="styleTextInput" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>
